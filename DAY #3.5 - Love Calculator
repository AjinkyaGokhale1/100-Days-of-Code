# ðŸš¨ Don't change the code below ðŸ‘‡
print("Welcome to the Love Calculator!")
name1 = input("What is your name? \n")
name2 = input("What is their name? \n")
# ðŸš¨ Don't change the code above ðŸ‘†

#Write your code below this line ðŸ‘‡
lower_name1 = name1.lower()
lower_name2 = name2.lower()
lower_name3 = lower_name1 + lower_name2
#print(lower_name3)
count_t = lower_name3.count("t")
count_r = lower_name3.count("r")
count_u = lower_name3.count("u")
count_e = lower_name3.count("e")

total_true = count_t + count_r + count_u + count_e

count_l = lower_name3.count("l")
count_o = lower_name3.count("o")
count_v = lower_name3.count("v")

total_love = count_l + count_o + count_v + count_e
score = str(total_true) + str(total_love)

if int(score) < 10 or int(score) > 90:
  print(f"Your score is {score}, you go together like coke and mentos.")
elif int(score) >= 40 and int(score) <= 50:
  print(f"Your score is {score}, you are alright together.")

else:
  print(f"Your score is {score}.")
